<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="openg2p_disbursement_batch_form_inherit" model="ir.ui.view">
            <field name="name">openg2p.disbursement.batch.form.inherit</field>
            <field name="model">openg2p.disbursement.batch</field>
            <field name="inherit_id" ref="openg2p_disbursement.openg2p_disbursement_slip_run_form"/>
            <field name="arch" type="xml">
                <data>
                    <div name="checklist_draft_div" position="inside">
                        <group colspan="2">
                            <label for="checklist_draft_complete_deregistration" string="Review Deregistrations"/>
                            <div class="o_row">
                                <field name="checklist_draft_complete_deregistration" nolabel="1"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <div attrs="{'invisible': [('is_approved', '!=', False)]}">
                                    <field name="active_deregistration_count" nolabel="1" class="oe_inline"/>
                                    <span class="oe_inline"> Pending</span>
                                </div>


                            </div>
                        </group>
                    </div>
                </data>
            </field>
        </record>
    </data>
</odoo>