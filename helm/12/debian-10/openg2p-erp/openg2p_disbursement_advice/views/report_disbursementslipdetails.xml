<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_slip"
                  inherit_id="openg2p_disbursement.report_slipdetails">

            <xpath expr="//div[@class='page']/table[2]" position="after">
                <t t-if="o.advice_line_id and o.advice_line_id != 'cancel'">
                    <h3>Disbursement Routing Information</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Bank</th>
                                <th>Account Holder</th>
                                <th>Account Number</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="o.advice_line_id.advice_id.bank_id.name"/>
                                </td>
                                <td>
                                    <span t-field="o.advice_line_id.acc_holder_name"/>
                                </td>
                                <td>
                                    <span t-field="o.advice_line_id.name"/>
                                </td>
                                <td>
                                    <span t-field="o.advice_line_id.amount"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </xpath>

        </template>
    </data>
</odoo>
